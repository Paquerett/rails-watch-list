<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new list</h1>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.submit class: "btn btn-violet" %>
      <% end %>
    </div>
  </div>
</div>

<div class="button-list">
  <%= link_to "Back to lists", lists_path, class: "btn btn-outline-danger" %>
</div>
